{
	"_version": "1.12.0",
	"sap.app": {
		"id": "com.sap.postcard.postcard",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
        "resources": "resources.json",
        "dataSources": {
			"mainService": {
				"uri": "/v2/catalog/",
				"type": "OData",
				"settings": {
					"odataVersion": "2.0"
				}
			}

		},
		"ach": "ach",
		"sourceTemplate": {
			"id": "html5moduletemplates.basicSAPUI5ApplicationProjectModule",
			"version": "1.40.12"
		}
	},
	
	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

	"sap.ui5": {
		"flexEnabled": false,
		"rootView": {
			"viewName": "com.sap.postcard.postcard.view.postCardList",
			"type": "XML",
			"async": true,
			"id": "postCardList"
		},
		"dependencies": {
			"minUI5Version": "1.60.1",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "com.sap.postcard.postcard.i18n.i18n"
				}
            },
            "": {
				"dataSource": "mainService",
				"settings": {
					"defaultBindingMode": "TwoWay"
                }
            }
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"async": true,
				"viewPath": "com.sap.postcard.postcard.view",
				"controlAggregation": "pages",
				"controlId": "app",
				"clearControlAggregation": false
			},
			"routes": [{
				"name": "RoutepostcardCreate",
				"pattern": "RoutepostcardCreate",
				"target": ["TargetpostcardCreate"]
			}, {
				"name": "postCardCreate",
				"pattern": "",
				"target": ["postCardCreate"]
			}],
			"targets": {
				"TargetpostcardCreate": {
					"viewType": "XML",
					"transition": "slide",
					"clearControlAggregation": false,
					"viewId": "postcardCreate",
					"viewName": "postcardCreate"
                },
                "postCardCreate": {
					"viewType": "XML",
					"transition": "slide",
                    "clearControlAggregation": false,
                    "viewId": "postcardCreate",
					"viewName": "postcardCreate"
				}
			}
		}
	}
}
